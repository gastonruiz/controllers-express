<html>
<body>
    <%- include('partials/header.ejs') %>
    <h1>User List</h1>

    <ul>
        
        <% for (i= 0; i < users.length ; i++ ) {%>
            <li>
                
                <a href="/usuarios/detail/<%= users[i].id %>"><%= users[i].name %></a>
                <form method="post" action="/usuarios/delete/<%= users[i].id %>?_method=DELETE">
                    <button>Delete</button>

                </form>
            </li>
        
       <%}%>
    </ul>
    <br>
    <h2>Search</h2>

    <form action="/usuarios/search" method="get">
      <input type="text" name="search">
        <input type="submit" value="Search">
    </form>

</body>
</html>